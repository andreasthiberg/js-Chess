{
    "env": {
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "ignorePatterns": ["**/dist/*.js"],
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": "off",
        "indent": ["error", 4],
        "semi": [1, "always"]
    }
}
